<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/menu_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_banner"
        android:textStyle="bold"
        android:textSize="30sp"
        android:padding="@dimen/et_margen"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sin_canciones"
        android:text="@string/sin_canciones"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_de_canciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menu_banner"
        />

</RelativeLayout>